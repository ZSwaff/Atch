<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="10dp"
    tools:context="com.auriferous.atch.Activities.ChatActivity">

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/fullname"
        android:text="Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:gravity="center_vertical"
        android:minHeight="?android:attr/listPreferredItemHeightSmall"
        android:layout_alignParentTop="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_toStartOf="@+id/meet_here" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Here"
        android:id="@+id/meet_here"
        android:onClick="sendMessageMeetHere"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/meet_there" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="There"
        android:id="@+id/meet_there"
        android:layout_alignParentEnd="true"
        android:onClick="sendMessageMeetThere" />

    <ListView xmlns:android="http://schemas.android.com/apk/res/android"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:id="@+id/listview"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:stackFromBottom="true"
        android:transcriptMode="normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_above="@+id/message_box"
        android:smoothScrollbar="true"
        android:layout_below="@+id/meet_here">
    </ListView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:id="@+id/send_button"
        android:layout_below="@+id/listview"
        android:layout_alignParentEnd="true"
        android:onClick="sendMessage" />

    <com.auriferous.atch.ActionEditText
        android:id="@+id/message_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type a message"
        android:layout_alignParentBottom="true"
        android:inputType="text|textMultiLine|textCapSentences|textAutoCorrect"
        android:lines="5"
        android:minLines="1"
        android:maxLines="5"
        android:scrollHorizontally="false"
        android:imeOptions="actionSend"
        android:layout_toStartOf="@+id/send_button" />

</RelativeLayout>
